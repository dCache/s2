; srmMkdir
;
; srmPrepareToPut
; srmPutDone
; srmStatusOfPutRequest

ASSIGN srmTest srmMkdir
   #include ../include/PutCycle.s2

&& srmMkdir $ENV{ENDPOINT} directoryPath=$ENV{SRM_NEW_DIR0} returnStatus.explanation=(?P<returnStatus_explanation>.*) returnStatus.statusCode=(?P<returnStatus_statusCode>.*)

&& FUN PutCycle $ENV{FILE_TO_PUT0} $ENV{SRM_NEW_DIR0}/$ENV{cdate}.txt : putRequestToken

&& SYSTEM echo "${srmTest}: OK: ${returnStatus_statusCode}" >> $ENV{SRM2_SUPPORTED}
|| SYSTEM echo "${srmTest}: KO: ${-returnStatus_statusCode} ${-returnStatus_explanation}" >> $ENV{SRM2_SUPPORTED}
