; Parallel repeat (references to local/global variables)

ASSIGN v "v0"
   SYSTEM echo "${v} == v0 && ${::v} == v0"
   && ASSIGN v "v1"
     >2 4 SLEEP 0 500000
        ASSIGN v "v$I{0}" ::w "$I{0}" x "$I{0}"
           SYSTEM echo "${v} == v$I{0} && ${::v} == v1 && ${w} == $I{0} && ${::w} == $I{0} && ${x} == $I{0}"
   && SYSTEM echo "${v} == v1 && ${::w} == ${w} == [2-4] (lucky winner)"
   && eval=2 SYSTEM echo "x (${-x}) is not defined here, local in the parallel process scope"
