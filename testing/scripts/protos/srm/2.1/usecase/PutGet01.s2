; PutGet01: transfer of a file to/from SRM server
;
; srmPrepareToGet
; srmPrepareToPut
; srmPutDone
; srmStatusOfGetRequest
; srmStatusOfPutRequest

ASSIGN srmTest PutGet01
   #include ../include/PutCycle.s2
   #include ../include/GetCycle.s2


&& FUN PutCycle $ENV{FILE_TO_PUT} $ENV{NEW_SRM_FILE} : putRequestToken
&& FUN GetCycle $ENV{FILE_TO_GET} $ENV{NEW_SRM_FILE} : getRequestToken

&& SYSTEM echo "${srmTest}: OK" >> $ENV{SRM2_SUPPORTED}
|| SYSTEM echo "${srmTest}: KO ${-returnStatus_explanation}" >> $ENV{SRM2_SUPPORTED}
